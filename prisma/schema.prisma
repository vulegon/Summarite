generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  // 同期状態: idle, syncing, completed, failed
  githubSyncStatus  String?   @default("idle") @map("github_sync_status")
  githubSyncedAt    DateTime? @map("github_synced_at")
  jiraSyncStatus    String?   @default("idle") @map("jira_sync_status")
  jiraSyncedAt      DateTime? @map("jira_synced_at")

  accounts      Account[]
  githubEvents  GithubEvent[]
  jiraEvents    JiraEvent[]
  summaries     Summary[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  accessToken       String? @map("access_token")
  refreshToken      String? @map("refresh_token")
  expiresAt         Int?    @map("expires_at")
  tokenType         String? @map("token_type")
  scope             String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("accounts")
}

model GithubEvent {
  id          String   @id @default(cuid())
  userId      String   @map("user_id")
  eventType   String   @map("event_type") // "pr_opened", "pr_merged", "review", "issue_opened", "issue_closed"
  eventDate   DateTime @map("event_date")
  externalId  String   @map("external_id") // PR番号やIssue番号
  repo        String?
  additions   Int?
  deletions   Int?
  commits     Int?
  createdAt   DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, eventType, externalId])
  @@index([userId, eventDate])
  @@index([userId, eventType, eventDate])
  @@map("github_events")
}

model JiraEvent {
  id          String   @id @default(cuid())
  userId      String   @map("user_id")
  eventType   String   @map("event_type") // "created", "done", "in_progress", "comment"
  eventDate   DateTime @map("event_date")
  issueKey    String   @map("issue_key") // e.g., "PROJ-123"

  // Jira固有のフィールド
  projectKey  String?  @map("project_key")
  projectName String?  @map("project_name")
  issueType   String?  @map("issue_type") // "Story", "Bug", "Task"
  priority    String?
  status      String?
  summary     String?
  assignee    String?
  reporter    String?
  storyPoints Float?   @map("story_points")

  createdAt   DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, eventType, issueKey])
  @@index([userId, eventDate])
  @@index([userId, projectKey, eventDate])
  @@map("jira_events")
}

model Summary {
  id          String   @id @default(cuid())
  userId      String   @map("user_id")
  periodStart DateTime @map("period_start")
  periodEnd   DateTime @map("period_end")
  periodType  String   @map("period_type")

  content     String   @db.Text
  model       String

  createdAt   DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, periodStart, periodEnd, periodType])
  @@index([userId, periodType])
  @@map("summaries")
}
